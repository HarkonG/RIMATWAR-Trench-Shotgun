<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Muzzle Flash</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="HRK_TrenchGunA"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalsh</def>
							<drawSize>(1,1.5)</drawSize>
							<offsets>
								<li>(0.55,0.05)</li>
							</offsets>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="HRK_TrenchGunB"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalsh</def>
							<drawSize>(1,1.5)</drawSize>
							<offsets>
								<li>(0.60,0.05)</li>
							</offsets>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>